@model LoginViewModel
@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/Shared/_NoLoginLayout.cshtml";
}

<div class="flex items-center justify-center grow">
  <div class="flex flex-col items-start justify-center basis-2/3 pr-14">
    <h2 class="text-6xl tracking-widest mb-2">Experience Banking</h2>
    <p class="tracking-wider">Welcome to MCBA Bank, a cutting-edge financial institution committed to providing seamless
      and convenient banking services to individuals and businesses alike. With a strong emphasis on technological
      innovation, MCBA Bank has established itself as a leader in the realm of online banking, offering a wide range of
      features designed to enhance the banking experience for our customers.</p>
  </div>
  <div class="w-80 p-6 rounded-lg border-solid border-neutral border-2 basis-1/3">
    <h1 class="text-3xl mb-1">Welcome Back!</h1>
    <p class="text-gray-600 mb-2 text-sm">Please login to access all banking feature from MCBA.</p>
    <form asp-action="Login">
      <div asp-validation-for="Login" class="text-danger"></div>
      <label asp-for="LoginId" class="block mb-1"></label>
      <input asp-for="LoginId" placeholder="Type here" class="input input-bordered input-secondary w-full">
      <span asp-validation-for="LoginId" class="text-error block py-1"></span>
      <label asp-for="Password" class="block mb-1"></label>
      <input asp-for="Password" placeholder="Type here" class="input input-bordered input-secondary w-full">
      <span asp-validation-for="Password" class="text-error block py-1"></span>
      <p class="my-2">By logging in, you agree to terms and condition of use.</p>
      <input type="submit" value="Login" class="btn btn-neutral mt-3">
    </form>
  </div>
</div>
